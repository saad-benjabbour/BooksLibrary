@{
    // defining some viewBag parameters
    ViewBag.Title = "Library Catalog";
}
@model BooksLibrary.Models.Catalog.AssetIndexModel;

    <div id="assets">
        <div class="assetsTable">
            <table class="table table-striped table-bordered table-sm" id="dtBasicExample">
                <thead class="thead-dark">
                    <tr>
                        <th>Image</th> <!-- the image will be linked with the id -->
                        <th>Title</th>
                        <th>Author / Director</th>
                        <th>Dewey Call Number</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var asset in Model.assets)
                    {
                    <tr class="assetRow">
                        <td class="">
                            <a asp-controller="Catalog" asp-action="Detail" asp-route-id="@asset.Id">
                                <img src="@asset.ImageUrl" alt="image_not_found" class="imageCell" />
                            </a>
                        </td>
                        <td>@asset.Title</td>
                        <td>@asset.AuthorOrDirector</td>
                        <td>@asset.DeweyCallNumber</td>

                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>